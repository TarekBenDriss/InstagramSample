<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black">

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:keepScreenOn="true"
        app:cameraAudio="off"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/settings"
        android:src="@drawable/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/flash"
        android:src="@drawable/flash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        />



    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/cancel"
        android:src="@drawable/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bottomLayout"
        android:background="@color/black"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        >


        <HorizontalScrollView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="0dp"
            android:scrollbars="none"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/gallery"
            app:layout_constraintEnd_toStartOf="@id/rotate"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/txt2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boomerang"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/txt3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txt1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Créer"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/txt4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txt2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vidéo"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txt3"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="16dp"
            android:visibility="invisible"
            android:src="@drawable/gallery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/rotate"
            android:visibility="invisible"
            android:src="@drawable/rotatecamera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/gallery0"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:src="@drawable/gallery"
        app:layout_constraintBottom_toBottomOf="@id/bottomLayout"
        app:layout_constraintStart_toStartOf="@id/bottomLayout"
        app:layout_constraintTop_toTopOf="@id/bottomLayout" />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/rotate0"
        android:src="@drawable/rotatecamera"
        app:layout_constraintEnd_toEndOf="@id/bottomLayout"
        app:layout_constraintTop_toTopOf="@id/bottomLayout"
        app:layout_constraintBottom_toBottomOf="@id/bottomLayout"
        android:layout_margin="8dp"
        />
    <HorizontalScrollView
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHeight_percent="0.8"
        android:layout_width="0dp"
        android:scrollbars="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/take"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/filtre"
                />
        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>